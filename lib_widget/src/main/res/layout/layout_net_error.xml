<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_net_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    >
    <TextView
        android:id="@+id/tv_net_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:text="@string/lw_hint_net_timeout"
        android:textColor="#666666"
        android:textSize="14sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_net_msg"
        android:src="@drawable/lw_icon_net_error" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_net_msg"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_net_reresh"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/lw_btn_net_refresh"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/lw_icon_refresh"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/lw_hint_refresh"
            android:textColor="#999999"
            android:textSize="12sp"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_net_setting"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/lw_btn_net_setting"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_marginLeft="10dp"
            android:text="@string/lw_hint_net_setting"
            android:textColor="#FF4A4A"
            android:textSize="12sp"
            android:clickable="true"
            />
    </LinearLayout>
</RelativeLayout>