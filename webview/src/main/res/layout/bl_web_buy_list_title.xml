<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_content_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/color_light_gray">



    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:padding="6dp"
        android:src="@mipmap/common_i_back"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/share_in_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/bl_web_share_icon"
        android:padding="3dp"
        android:scaleType="center"
        android:text="@string/bl_web_share"
        android:textSize="9sp"
        tools:ignore="SmallSp"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/focus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/share_in_title"
        android:background="@null"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/bl_web_focus"
        android:padding="3dp"
        android:scaleType="center"
        android:text="@string/bl_web_my_focus"
        android:textSize="9sp"
        tools:ignore="SmallSp"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/color_title_text"
        android:textSize="18sp"
        tools:text="标题" />

</RelativeLayout>